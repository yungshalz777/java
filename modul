import java.util.Scanner;

interface Shape {
    double getArea();
}

// Реалізує інтерфейс Shape
class Rectangle implements Shape {
    private double a; // Довжина
    private double b; // Ширина 

    public Rectangle(double a, double b) { // конструктор
        this.a = a;
        this.b = b;
    }

    @Override //getArea() для прямокутника: площа = довжина * ширина
    public double getArea() {
        return a * b;
    }
}

// Клас Прямокутний трикутник
class Triangle implements Shape {
    private double c; // Катет A
    private double d; // Катет B

    public Triangle(double c, double d) { // конструктор
        this.c = c;
        this.d = d;
    }

    //getArea() для прямокутного трикутника: площа = (катет A * катет B) / 2
    @Override
    public double getArea() {
        return (c * d) / 2;
    }
}

public class GeometryApp {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Введіть довжину прямокутника (поле A):");
        double rectLength = readPositiveDouble(scanner);
        System.out.println("Введіть ширину прямокутника (поле B):");
        double rectWidth = readPositiveDouble(scanner);
        System.out.println("Введіть довжину першого катета трикутника (поле C):");
        double triCathetusC = readPositiveDouble(scanner);
        System.out.println("Введіть довжину другого катета трикутника (поле D):");
        double triCathetusD = readPositiveDouble(scanner);
// створення обʼєктів
        Rectangle rectangle = new Rectangle(rectLength, rectWidth);
        Triangle triangle = new Triangle(triCathetusC, triCathetusD);
// 
        Shape shape1 = rectangle;
        Shape shape2 = triangle;

        System.out.println("\n--- Результати обчислень ---");
        System.out.printf("Площа прямокутника: %.2f\n", shape1.getArea());
        System.out.printf("Площа прямокутного трикутника: %.2f\n", shape2.getArea());

        scanner.close();
    }

private static double readPositiveDouble(Scanner scanner) {
        double value = -1;
        while (value <= 0) {
            if (scanner.hasNextDouble()) {
                value = scanner.nextDouble();
                if (value <= 0) {
                    System.out.println("Значення має бути додатним числом. Спробуйте ще раз:");
                }
            } else {
                System.out.println("Некоректний ввід. Введіть число:");
                scanner.next(); // Очистити некоректний ввід
            }
        }
        return value;
    }
}


